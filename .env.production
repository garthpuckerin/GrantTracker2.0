# Production Environment Variables
# Copy this file to .env.local and fill in the actual values

# Database
DATABASE_URL="postgresql://grant_user:YOUR_POSTGRES_PASSWORD@localhost:5432/grant_tracker_prod"

# Authentication (Clerk)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_live_YOUR_CLERK_PUBLISHABLE_KEY"
CLERK_SECRET_KEY="sk_live_YOUR_CLERK_SECRET_KEY"
NEXT_PUBLIC_CLERK_SIGN_IN_URL="/sign-in"
NEXT_PUBLIC_CLERK_SIGN_UP_URL="/sign-up"
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL="/dashboard"
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL="/dashboard"

# File Upload (UploadThing)
UPLOADTHING_SECRET="sk_live_YOUR_UPLOADTHING_SECRET"
UPLOADTHING_APP_ID="YOUR_UPLOADTHING_APP_ID"

# Application
NODE_ENV="production"
NEXT_PUBLIC_APP_URL="https://your-domain.com"

# Optional: Redis for caching
REDIS_URL="redis://localhost:6379"

# Optional: Monitoring and Analytics
NEXT_PUBLIC_ANALYTICS_ID="YOUR_ANALYTICS_ID"
SENTRY_DSN="YOUR_SENTRY_DSN"

# Security
NEXTAUTH_SECRET="YOUR_NEXTAUTH_SECRET_32_CHARS_MIN"
NEXTAUTH_URL="https://your-domain.com"

# Email (if implementing email notifications)
SMTP_HOST="smtp.your-provider.com"
SMTP_PORT="587"
SMTP_USER="your-email@domain.com"
SMTP_PASSWORD="your-email-password"
SMTP_FROM="Grant Tracker <noreply@your-domain.com>"

# Backup and Storage
AWS_ACCESS_KEY_ID="YOUR_AWS_ACCESS_KEY"
AWS_SECRET_ACCESS_KEY="YOUR_AWS_SECRET_KEY"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="your-backup-bucket"