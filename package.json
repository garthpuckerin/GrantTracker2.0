{
  "name": "grant-tracker-2.0",
  "version": "0.1.0",
  "private": true,
  "description": "Multi-Year Federal Grant Management Platform",
  "scripts": {
    "build": "next build",
    "dev": "next dev",
    "lint": "next lint",
    "start": "next start",
    "type-check": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "demo:setup": "node scripts/setup-demo.js",
    "demo:reset": "node scripts/setup-demo.js reset",
    "demo:start": "npm run demo:setup && npm run dev",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:accessibility": "jest --testPathPattern=accessibility",
    "test:ui": "jest --testPathPattern=ui",
    "test:all": "npm run test && npm run test:e2e",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky install"
  },
  "dependencies": {
    "@clerk/nextjs": "^5.0.0",
    "@prisma/client": "^5.7.1",
    "@radix-ui/react-dialog": "^1.0.5",
